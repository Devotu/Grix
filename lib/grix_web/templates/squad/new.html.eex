<section>
  <%= form_for @conn, Routes.squad_path(@conn, :new), fn f -> %>
    <label>
      Name: <%= text_input f, :name %>
    </label>
    <label>
      Faction: <%= select(f, :faction, ["Rebel": "fReb", "Empire": "fEmp", "Scum": "fScm"]) %>
    </label>
    <label>
      Archetype: <%= select(f, :archetype, ["None": "atNon", "N of a kind": "atNok", "Aces": "atAce", "Beef": "atBef"]) %>
    </label>
    <%= submit("Create", class: "button border do submit") %>
  <% end %>
</section>