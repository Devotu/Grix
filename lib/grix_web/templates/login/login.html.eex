<section>
  <%= form_for @conn, Routes.login_path(@conn, :login), fn f -> %>
    <label>
      Username: <%= text_input f, :username %>
    </label>
    <label>
      Password: <%= text_input f, :password %>
    </label>
    <%= submit("Login", class: "button border do submit") %>
  <% end %>
</section>