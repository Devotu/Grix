<section>
  <%= form_for @conn, Routes.game_path(@conn, :record), fn f -> %>
    <section>
      <label>
        Player: <%= select(f, :player_1, @players) %>
      </label>
      <label>
        Squad: <%= select(f, :squad_1, @squads) %>
      </label>
    </section>
    <section>
      <label>
        Player: <%= select(f, :player_2, @players) %>
      </label>
      <label>
        Squad: <%= select(f, :squad_2, @squads) %>
      </label>
    </section>
    <%= submit("Record", class: "button border do submit") %>
  <% end %>
</section>